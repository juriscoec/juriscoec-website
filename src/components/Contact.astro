    content: "Av. Principal 123, Edificio Legal, Piso 15",
    link: "https://maps.google.com"
  },
  {
    icon: "üìû",
    title: "Tel√©fono",
    content: "+593 (2) 234-5678",
    link: "tel:+59322345678"
  },
  {
    icon: "‚úâÔ∏è",
    title: "Email",
    content: "contacto@bufeteabogados.com",
    link: "mailto:contacto@bufeteabogados.com"
  },
  {
